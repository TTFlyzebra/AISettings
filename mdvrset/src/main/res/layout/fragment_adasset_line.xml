<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <com.flyzebra.mdrvset.view.AdasSetView
        android:id="@+id/adasSetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adasSetView"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--horizon-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/horizontal_line"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" ----- "
                        android:textColor="@color/RED"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=")"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_horizon_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_horizont_up"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_up" />

                <ImageButton
                    android:id="@+id/adas_cali_horizont_down"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_down" />

            </LinearLayout>

            <!--carMiddle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/car_central_line"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="  |  "
                        android:textColor="@color/YELLOW"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=")"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_carMiddle_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_carMiddle_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_carMiddle_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <!--cameraHeight-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/camera_height"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_cameraHeight_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraHeight_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraHeight_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <!--cameraToAxle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/camera_to_axle"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_cameraToAxle_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToAxle_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToAxle_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <!--carWidth-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/car_width"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_carWidth_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_carWidth_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_carWidth_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <!--cameraToBumper-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/camera_to_bumper"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_cameraToBumper_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToBumper_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToBumper_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>

            <!--cameraToLeftWheel-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rectangle_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/camera_to_left_wheel"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adas_cali_cameraToLeftWheel_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="200" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToLeftWheel_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_left" />

                <ImageButton
                    android:id="@+id/adas_cali_cameraToLeftWheel_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_keyboard_arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>