<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/ac_fm01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/choice_view_bottom"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/choice_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/adas_view_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adas_cali_im"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_choise_item_height"
                android:layout_marginTop="@dimen/bar_choise_item_margin_top"
                android:gravity="center"
                android:src="@drawable/ic_shezhi_press" />

            <TextView
                android:id="@+id/adas_cali_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/bar_content_item_margin"
                android:layout_marginBottom="@dimen/bar_choise_item_margin_bottom"
                android:gravity="center"
                android:text="@string/adas_settings"
                android:textColor="@color/menu_text_on"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adas_setting_view_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adas_setting_im"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_choise_item_height"
                android:layout_marginTop="@dimen/bar_choise_item_margin_top"
                android:gravity="center"
                android:src="@drawable/ic_shezhi_normal" />

            <TextView
                android:id="@+id/adas_setting_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/bar_content_item_margin"
                android:layout_marginBottom="@dimen/bar_choise_item_margin_bottom"
                android:gravity="center"
                android:text="@string/bsd_settings"
                android:textColor="@color/menu_text_off"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:gravity="center">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_message"
            android:gravity="start|center"
            android:padding="8dp"
            android:textColor="#BFFF0000"
            android:textSize="18sp"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>