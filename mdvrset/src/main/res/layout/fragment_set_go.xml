<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/gl_ffplay"
    android:layout_alignParentBottom="true"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dms_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/default_sens_choise_margin"
        android:layout_marginTop="@dimen/default_sens_choise_margin"
        android:layout_marginRight="@dimen/default_sens_choise_margin"
        android:lineSpacingExtra="2dp"
        android:text="@string/bsd_cali_hint2"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/calibration_start_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/bar_choise_item_margin_bottom"
        android:background="@drawable/def_button"
        android:text="@string/start_calibration"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/holo_gray_light" />
</RelativeLayout>